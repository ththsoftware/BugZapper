@model BugZapper.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h3 class="border-bottom-1">Edit</h3>

<h4>Ticket - @(Model.TicketNumber)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketId" />
            <input type="hidden" asp-for="TicketNumber" />
            <input type="hidden" asp-for="ClosedDate" />
            <input type="hidden" asp-for="CreatedBy" />
            <div class="form-group">
                <label asp-for="Project" class="control-label"></label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"><option value="">-- Select Project --</option></select>
            </div>
            <div class="form-group">
                <label asp-for="TicketSubject" class="control-label"></label>
                <input asp-for="TicketSubject" class="form-control" />
                <span asp-validation-for="TicketSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketOwner" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatus" class="control-label"></label>
                <select asp-for="TicketStatus" asp-items="@(new SelectList(new List<SelectListItem>
                                                                                    {
                                                                                        new SelectListItem { Text = "Open", Value = "Open"},
                                                                                        new SelectListItem { Text = "In Progress", Value = "In Progress"},
                                                                                        new SelectListItem { Text = "Hold", Value = "Hold"},
                                                                                        new SelectListItem { Text = "Closed", Value = "Closed"},
                                                                                        }, "Text", "Value"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="BugDescription" class="control-label"></label>
                <input asp-for="BugDescription" class="form-control" />
                <span asp-validation-for="BugDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
