@model BugZapper.Models.Project
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="border-bottom-1 pt-3 pb-2">
        <div class="row pl-5">
            <h3>@(ViewBag.ProjectTitle)</h3>
        </div>
    </div>
    <div class="table-responsive" style="overflow-x:auto;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().TicketNumber)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().TicketSubject)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().TicketOwner)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().CreatedBy)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().TicketStatus)
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Tickets)
                {
                    if (item.ProjectId == ViewBag.ProjectId)
                    {
                        <tr>
                            <td style="white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.TicketNumber)
                            </td>
                            <td style="white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.TicketSubject)
                            </td>
                            <td style="white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.User.UserName)
                            </td>
                            <td style="white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td style="white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.TicketStatus)
                            </td>
                            <td style="white-space: nowrap;">
                                <a class="btn btn-dark" asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.TicketId">Edit</a>
                                <a class="btn btn-dark" asp-controller="Tickets" asp-action="Details" asp-route-id="@item.TicketId">View</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a class="btn btn-dark" asp-action="Index">Back to Projects</a>
</div>
